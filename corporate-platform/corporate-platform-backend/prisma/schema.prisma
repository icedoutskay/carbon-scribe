generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum RetirementPurpose {
  SCOPE_1
  SCOPE_2
  SCOPE_3
  CORPORATE
  EVENTS
  PRODUCT
}

model Company {
  id                      String              @id @default(cuid())
  name                    String
  annualRetirementTarget  Float               @default(0)
  netZeroTarget           Float               @default(0)
  netZeroTargetYear       Int?

  retirements             Retirement[]
  retirementTargets       RetirementTarget[]
  retirementSchedules     RetirementSchedule[]
  batchRetirements        BatchRetirement[]
  users                   User[]
  carts                   Cart[]
  orders                  Order[]
  bids                    Bid[]
  projects                Project[]
  portfolios              Portfolio[]
  transactions            Transaction[]
  compliances             Compliance[]
  reports                 Report[]
  activities              Activity[]

  createdAt               DateTime            @default(now())
  updatedAt               DateTime            @updatedAt

  @@map("Company")
}

model RetirementTarget {
  id          String   @id @default(cuid())
  companyId   String
  year        Int
  month       Int
  target      Float

  company     Company  @relation(fields: [companyId], references: [id])

  @@unique([companyId, year, month])
  @@map("retirement_targets")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  methodology String?
  standard    String?
  country     String?
  companyId   String?  // Optional: project can be company-scoped or global
  company     Company? @relation(fields: [companyId], references: [id])
  credits     Credit[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([companyId])
  @@map("projects")
}

model Credit {
  id           String               @id @default(cuid())
  projectId    String?  // Optional link to Project entity
  project      Project?             @relation(fields: [projectId], references: [id])
  projectName  String               // Denormalized for display/search
  country      String?
  methodology  String?
  standard     String?
  sdgs         String?
  vintageYear  Int?
  price        Float                @default(0) // Price per tCOâ‚‚
  totalAmount  Int
  available    Int
  retirements  Retirement[]
  cartItems    CartItem[]
  orderItems   OrderItem[]
  reservations CreditReservation[]
  auctions     Auction[]
  portfolioEntries PortfolioEntry[]
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt

  // Search optimization
  searchVector    String?
  featured        Boolean   @default(false)
  featuredUntil   DateTime?
  viewCount       Int       @default(0)
  purchaseCount   Int       @default(0)
  lastPurchasedAt DateTime?

  @@index([projectId])
  @@index([searchVector])
  @@index([featured])
  @@index([viewCount])
  @@index([purchaseCount])
}

model Retirement {
  id                String              @id @default(cuid())
  companyId         String
  company           Company             @relation(fields: [companyId], references: [id])
  userId            String              // User who performed retirement
  user              User                @relation(fields: [userId], references: [id])
  creditId          String
  credit            Credit              @relation(fields: [creditId], references: [id])

  // Retirement details
  amount            Float
  purpose           String              // scope1, scope2, scope3, corporate, events, product
  purposeDetails    String?             // Additional context

  // Pricing
  priceAtRetirement Float

  // Certificate details
  certificateId     String?             @unique
  certificateUrl    String?

  // Blockchain
  transactionHash   String?
  transactionUrl    String?
  verifiedAt        DateTime?

  // Metadata
  retiredAt         DateTime            @default(now())

  // Relations
  certificate       RetirementCertificate?

  @@index([companyId])
  @@index([userId])
  @@index([creditId])
  @@index([purpose])
  @@index([retiredAt])
}

model RetirementCertificate {
  id                String    @id @default(cuid())
  retirementId      String    @unique
  retirement        Retirement @relation(fields: [retirementId], references: [id])

  certificateNumber String    @unique // e.g., "RET-2024-001234"
  pdfUrl            String
  ipfsHash          String?   // IPFS storage for permanence

  // Certificate data (snapshot)
  companyName       String
  retirementDate    DateTime
  creditProject     String
  creditAmount      Int
  creditPurpose     String
  transactionHash   String?

  createdAt         DateTime  @default(now())
}

model User {
  id                  String    @id @default(cuid())
  email               String    @unique
  password            String
  firstName           String
  lastName            String
  role                String    @default("viewer")
  companyId           String
  company             Company   @relation(fields: [companyId], references: [id])
  refreshToken        String?
  lastLoginAt         DateTime?
  lastLoginIp         String?
  isActive            Boolean   @default(true)
  emailVerified       Boolean   @default(false)
  passwordResetToken  String?
  passwordResetExpires DateTime?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  sessions            Session[]
  retirements         Retirement[]
  bids                Bid[]

  @@unique([companyId, email])
  @@index([email])
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  refreshToken String   @unique
  userAgent    String?
  ipAddress    String?
  expiresAt    DateTime
  isValid      Boolean  @default(true)
  createdAt    DateTime @default(now())
  lastUsedAt   DateTime?

  @@index([refreshToken])
  @@index([expiresAt])
}

// ==========================================
// Shopping Cart & Checkout Models
// ==========================================

model Cart {
  id              String    @id @default(cuid())
  companyId       String
  company         Company   @relation(fields: [companyId], references: [id])

  // Session
  sessionId       String    @unique
  expiresAt       DateTime  // Carts expire after 7 days

  // Totals
  subtotal        Float     @default(0)
  serviceFee      Float     @default(0)
  total           Float     @default(0)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  items           CartItem[]
  order           Order?

  @@index([companyId])
  @@index([sessionId])
  @@index([expiresAt])
}

model CartItem {
  id              String    @id @default(cuid())
  cartId          String
  cart            Cart      @relation(fields: [cartId], references: [id], onDelete: Cascade)
  creditId        String
  credit          Credit    @relation(fields: [creditId], references: [id])

  quantity        Int       @default(1000) // Standard lot size
  price           Float     // Price snapshot at add time

  createdAt       DateTime  @default(now())

  @@unique([cartId, creditId])
  @@index([cartId])
}

model Order {
  id              String    @id @default(cuid())
  orderNumber     String    @unique // Human-readable (e.g., "ORD-2024-0001")

  companyId       String
  company         Company   @relation(fields: [companyId], references: [id])
  userId          String    // User who placed order

  cartId          String?   @unique // Original cart
  cart            Cart?     @relation(fields: [cartId], references: [id])

  // Order details
  subtotal        Float
  serviceFee      Float
  total           Float
  status          String    // pending, processing, completed, failed, refunded

  // Payment
  paymentMethod   String?   // credit_card, wire, crypto
  paymentId       String?
  paidAt          DateTime?

  // Blockchain
  transactionHash String?   // Stellar transaction hash

  // Metadata
  notes           String?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?

  // Relations
  items           OrderItem[]
  auditLogs       OrderAuditLog[]

  @@index([companyId])
  @@index([orderNumber])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id              String    @id @default(cuid())
  orderId         String
  order           Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  creditId        String
  credit          Credit    @relation(fields: [creditId], references: [id])

  quantity        Int
  price           Float     // Price at purchase
  subtotal        Float

  createdAt       DateTime  @default(now())

  @@index([orderId])
}

// ==========================================
// Credit Reservation (15-minute hold)
// ==========================================

model CreditReservation {
  id        String   @id @default(cuid())
  cartId    String
  creditId  String
  credit    Credit   @relation(fields: [creditId], references: [id])
  quantity  Int
  expiresAt DateTime // 15-minute TTL
  createdAt DateTime @default(now())

  @@unique([cartId, creditId])
  @@index([cartId])
  @@index([creditId])
  @@index([expiresAt])
}

// ==========================================
// Order Audit Log
// ==========================================

model OrderAuditLog {
  id         String   @id @default(cuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  event      String   // created, confirmed, failed, cancelled, refunded
  fromStatus String?
  toStatus   String
  userId     String?
  metadata   String?  // JSON string for extra context
  createdAt  DateTime @default(now())

  @@index([orderId])
  @@index([event])
  @@index([createdAt])
}

// ==========================================
// Auction Models
// ==========================================

model Auction {
  id              String   @id @default(cuid())
  creditId        String
  credit          Credit   @relation(fields: [creditId], references: [id])
  
  // Auction parameters
  quantity        Int      // Total credits for auction
  remaining       Int      // Credits still available
  
  // Pricing
  startPrice      Float
  currentPrice    Float
  floorPrice      Float
  priceDecrement  Float    // Amount price drops each interval
  decrementInterval Int    // Minutes between price drops
  
  // Timing
  startTime       DateTime
  endTime         DateTime
  lastPriceUpdate DateTime
  
  // Status
  status          String   // pending, active, ended, settled, cancelled
  
  // Results
  winnerId        String?  // User ID of winner
  finalPrice      Float?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  bids            Bid[]
  
  @@index([status])
  @@index([creditId])
  @@index([endTime])
}

model Bid {
  id          String   @id @default(cuid())
  auctionId   String
  auction     Auction  @relation(fields: [auctionId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  bidPrice    Float
  quantity    Int
  status      String   // pending, accepted, rejected, outbid
  createdAt   DateTime @default(now())

  @@index([auctionId])
  @@index([userId])
}

model RetirementSchedule {
  id              String             @id @default(cuid())
  companyId       String
  company         Company            @relation(fields: [companyId], references: [id])
  createdBy       String

  name            String
  description     String?

  purpose         String
  amount          Int

  creditSelection String
  creditIds       String[]

  frequency       String
  interval        Int?
  startDate       DateTime
  endDate         DateTime?
  nextRunDate     DateTime

  isActive        Boolean            @default(true)
  lastRunDate     DateTime?
  lastRunStatus   String?
  runCount        Int                @default(0)

  notifyBefore    Int?
  notifyAfter     Boolean            @default(true)

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  executions      ScheduleExecution[]

  @@index([companyId])
  @@index([nextRunDate])
  @@index([isActive])
  @@index([frequency])
}

model ScheduleExecution {
  id              String             @id @default(cuid())
  scheduleId      String
  schedule        RetirementSchedule @relation(fields: [scheduleId], references: [id])

  scheduledDate   DateTime
  executedDate    DateTime?
  status          String

  amountRetired   Int?
  retirementIds   String[]
  errorMessage    String?

  retryCount      Int                @default(0)
  nextRetryDate   DateTime?

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@index([scheduleId])
  @@index([status])
  @@index([scheduledDate])
}

model BatchRetirement {
  id              String             @id @default(cuid())
  companyId       String
  company         Company            @relation(fields: [companyId], references: [id])
  createdBy       String

  name            String
  description     String?

  items           Json

  status          String
  totalItems      Int
  completedItems  Int
  failedItems     Int

  retirementIds   String[]
  errorLog        Json?

  createdAt       DateTime           @default(now())
  completedAt     DateTime?
  updatedAt       DateTime           @updatedAt

  @@index([companyId])
  @@index([status])
}

// ==========================================
// Portfolio (corporate credit holdings & metrics)
// ==========================================

model Portfolio {
  id            String           @id @default(cuid())
  companyId     String
  company       Company          @relation(fields: [companyId], references: [id])
  name          String?          // e.g. "Q1 2024 Holdings"
  totalCredits  Int              @default(0)  // Snapshot metric
  totalRetired  Float            @default(0)  // Snapshot metric
  asOfDate      DateTime         @default(now())
  entries       PortfolioEntry[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([companyId])
  @@index([asOfDate])
  @@map("portfolios")
}

model PortfolioEntry {
  id          String   @id @default(cuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  creditId    String
  credit      Credit   @relation(fields: [creditId], references: [id])
  quantity    Int
  createdAt   DateTime @default(now())

  @@unique([portfolioId, creditId])
  @@index([portfolioId])
  @@index([creditId])
  @@map("portfolio_entries")
}

// ==========================================
// Transaction (purchase history & orders log)
// ==========================================

model Transaction {
  id          String   @id @default(cuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  userId      String?
  type        String   // order, refund, adjustment, transfer
  orderId     String?  // Reference to Order when type = order
  amount      Float
  currency    String   @default("USD")
  status      String   // pending, completed, failed
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([companyId])
  @@index([userId])
  @@index([type])
  @@index([createdAt])
  @@map("transactions")
}

// ==========================================
// Compliance (framework tracking & requirements)
// ==========================================

model Compliance {
  id           String   @id @default(cuid())
  companyId    String
  company      Company  @relation(fields: [companyId], references: [id])
  framework    String   // e.g. SBTi, CDP, GRI
  status       String   // compliant, in_progress, not_started
  requirements Json?    // Framework-specific requirements
  dueDate      DateTime?
  completedAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([companyId])
  @@index([framework])
  @@index([status])
  @@map("compliances")
}

// ==========================================
// Report (generated reports & templates)
// ==========================================

model Report {
  id          String   @id @default(cuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id])
  type        String   // sustainability, retirement, compliance, custom
  name        String
  fileUrl     String?
  params      Json?    // Generation parameters
  generatedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([companyId])
  @@index([type])
  @@index([generatedAt])
  @@map("reports")
}

// ==========================================
// Activity (team activity & audit logs)
// ==========================================

model Activity {
  id         String   @id @default(cuid())
  companyId  String
  company    Company  @relation(fields: [companyId], references: [id])
  userId     String?
  action     String   // e.g. login, retirement_created, order_placed
  entityType String?  // e.g. Retirement, Order
  entityId   String?
  metadata   Json?
  ipAddress  String?
  createdAt  DateTime @default(now())

  @@index([companyId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("activities")
}
